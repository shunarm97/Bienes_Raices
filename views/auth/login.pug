extends  ../layout/index

block contenido 

    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal  Raices
        h2.text-center.text-2xl.bg-gray-200.font-extrabold= pagina

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                from.space-y-5
                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") email 
                        input#email.w-full.px-3.px-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Email" type="email" name="email")
                    div     
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") contraseña 
                        input#password.w-full.px-3.px-2.border.border-gray-300.rounder-md.placeholder-gray-400(placeholder="Contraseña" type="password" name="password")
                   
                    div.flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/register") Registra tu cuenta Aqui 
                        a.text-gray-500.text-xs(href="/auth/forgetPassword") Olvidaste tu Contraseña? 
                   
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer " type="submit" value="Crear Cuenta")